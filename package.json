{
  "name": "html-dangerous-encodings",
  "version": "1.0.0",
  "description": "List of dangerous HTML character encoding labels",
  "license": "MIT",
  "keywords": [
    "html",
    "dom",
    "character",
    "encoding"
  ],
  "repository": "https://github.com/wooorm/html-dangerous-encodings",
  "bugs": "https://github.com/wooorm/html-dangerous-encodings/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "main": "index.json",
  "files": [
    "index.json"
  ],
  "dependencies": {},
  "devDependencies": {
    "browserify": "^13.0.0",
    "esmangle": "^1.0.1",
    "nyc": "^10.0.0",
    "remark-cli": "^2.1.0",
    "remark-preset-wooorm": "^2.0.0",
    "tape": "^4.4.0",
    "xo": "^0.17.0"
  },
  "scripts": {
    "build-md": "remark . --quiet --frail --output",
    "build-bundle": "browserify index.json --bare -s htmlDangerousEncodings > html-dangerous-encodings.js",
    "build-mangle": "esmangle html-dangerous-encodings.js > html-dangerous-encodings.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test.js",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true,
    "ignores": [
      "html-dangerous-encodings.js"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "remarkConfig": {
    "presets": "wooorm"
  }
}
